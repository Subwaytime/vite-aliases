{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2017",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
          "@assets/*": ["./assets/*"],
          "@components/*": ["./components/*"],
          "@pages/*": ["./pages/*"],
          "@store/*": ["./store/*"],
          "@utils/*": ["./utils/*"]
        }
    },
    "exclude": [
        "**/dist",
        "**/node_modules",
        "**/test"
    ]
}
